<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Views.sobre"
             Title="sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">


    <VerticalStackLayout Padding="20,50,20,0"
                         Spacing="20"
                         VerticalOptions="Start">

        <Image Source="logo_hotel.png"
               HeightRequest="120"
               HorizontalOptions="Center" />

        <Label Text="Sobre o App"
               FontSize="32"
               FontAttributes="Bold"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center"/>

        <Frame BackgroundColor="White"
               CornerRadius="15"
               Padding="20"
               HasShadow="True">
            <VerticalStackLayout Spacing="10">
                <Label Text="Desenvolvedor: Leonardo Gonçalves"
                       FontSize="18" />
                <Label Text="Ano de Desenvolvimento: 2025"
                       FontSize="18" />
                <Label Text="Versão do App: 1.0"
                       FontSize="18" />
            </VerticalStackLayout>
        </Frame>

        <Button Text="Voltar"
        BackgroundColor="#6C757D"
        TextColor="White"
        CornerRadius="10"
        WidthRequest="150"
        Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
